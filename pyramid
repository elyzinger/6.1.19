using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp13
{
	class Program
	{
		static void Main(string[] args)
		{
			Console.WriteLine("pick a number");
			int x = Convert.ToInt32(Console.ReadLine());

			for (int i = 1; i <= x; i++)
				
			
			{
				Console.WriteLine();
				Console.WriteLine();
				for(int y = 1; y<=i; y++)
				{
					Console.Write(y);
				}
				for(int y = i + 1; y<=x; y++)
				{
					Console.Write("*");
				}
			}
			
		}
	}
}
